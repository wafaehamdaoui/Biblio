@model IEnumerable<Biblio.Models.Subscriber>

@{
    ViewData["Title"] = "Index";
}

<h1 class="table-primary">Subscriber list</h1>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th style="width:10%">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="table-info">
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-light" asp-controller="Subscribers" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye-fill"></i></a>
                        <a class="btn btn-warning" asp-controller="Subscribers" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i></a>
                        <a class="btn btn-danger" asp-controller="Subscribers" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3-fill"></i></a>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
