@model Biblio.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <select asp-for="BookId" asp-items="@ViewData["BookList"] as SelectList" class="form-control">
                    <option value="">Select a Book</option>
                </select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TakeDate" class="control-label"></label>
                <input asp-for="TakeDate" class="form-control" />
                <span asp-validation-for="TakeDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BackDate" class="control-label"></label>
                <input asp-for="BackDate" class="form-control" />
                <span asp-validation-for="BackDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

